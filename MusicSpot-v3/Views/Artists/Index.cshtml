@using MusicSpot_v3.Core.Models.Artists;
@*@model IEnumerable<MusicSpot_v3.Infrastructure.Data.Models.Artist>*@
@model AllArtistsViewModel

@{
    ViewData["Title"] = "Artists";
}

<h1>My Artists Catalog</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Genre
            </th>
            <th>
               Description
            </th>
            <th>
                IsPublic
            </th>
            <th>
                Albums
            </th>
            <th>
                User
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Artists) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublic)
            </td>
                <td>
                        <a class="btn btn-secondary m-1 text-nowrap" asp-area="" asp-controller="Albums" asp-action="AllAlbums" asp-route-id="@item.Id">All Albums</a>
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
